<beans>
  <bean id="jndi" class="org.xbean.spring.jndi.DefaultContext" singleton="true">
    <property name="entries">
      <map>
        <entry key="test/restaurant">
        
		  <restaurant id="restaurant" xmlns="http://xbean.org/schemas/pizza" xmlns:foo="http://acme.com" serviceName="foo:xyz" uri="http://cheese.com">
		    <dinnerMenu>
		      <pizza myTopping="Ham" cheese="Mozzarella" size="15"/>
		      <pizza myTopping="Eggs" cheese="Mozzarella" size="16"/>
		    </dinnerMenu>
		
		    <lunchMenu>
		      <pizza myTopping="Chicken" cheese="Brie" size="17"/>
		    </lunchMenu>
		
		    <favourite>
		      <pizza myTopping="Salami" cheese="Edam" size="17"/>
		    </favourite>
		  </restaurant>
		  
        </entry>
      </map>
    </property>
  </bean>
</beans>
