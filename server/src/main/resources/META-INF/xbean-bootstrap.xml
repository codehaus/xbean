<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans xmlns:s="http://xbean.org/schemas/server" >
  <bean id="PropertyPlaceholderConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"/>

  <s:kernel-main name="Main" kernel="#Kernel">
    <property name="services">
      <map>
        <entry key="FileSystemRepository" value-ref="FileSystemRepository"/>
        <entry key="SpringLoader" value-ref="SpringLoader"/>
      </map>
    </property>
    <s:next>
      <s:load-all-main kernel="#Kernel"/>
    </s:next>
  </s:kernel-main>

  <bean name="KernelFactory" class="org.xbean.kernel.KernelFactory" factory-method="newInstance"/>
  <bean name="Kernel" factory-bean="KernelFactory" factory-method="createKernel">
    <constructor-arg index="0" value="xbean"/>
  </bean>

  <s:file-system-repository id="FileSystemRepository" root="${xbean.base.dir}/repository"/>

  <s:spring-loader id="SpringLoader" kernel="#Kernel" baseDir="${xbean.base.dir}/conf">
    <s:xmlPreprocessors>
        <s:class-loader-xml-preprocessor repository="#FileSystemRepository"/>
    </s:xmlPreprocessors>
  </s:spring-loader>
</beans>
