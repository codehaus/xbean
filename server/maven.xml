<project default="default"
  xmlns:j="jelly:core"
  xmlns:ant="jelly:ant"
  >

  <goal name="default">
    <attainGoal name="jar:install"/>
  </goal>

  <goal name="build">
    <attainGoal name="default"/>
  </goal>

  <goal name="rebuild">
    <attainGoal name="clean"/>
    <attainGoal name="build"/>
  </goal>

  <postGoal name="test:compile">
    <taskdef name="annotationc"
      classname="org.codehaus.backport175.compiler.task.AnnotationCTask">
      <classpath>
        <pathelement location="${maven.repo.local}/backport175/jars/backport175-1.0.jar"/>
      </classpath>
    </taskdef>

    <annotationc verbose="true">
      <src path="${basedir}/src/test"/>
      <classpath path="${maven.test.dest}"/>
    </annotationc>
  </postGoal>
</project>
