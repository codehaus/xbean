<project default="default"
  xmlns:j="jelly:core"
  xmlns:ant="jelly:ant"
  >

  <postGoal name="java:compile">
    <attainGoal name="xbean:generate"/>
  </postGoal>

  <goal name="default">
    <attainGoal name="jar:install"/>
  </goal>

  <goal name="build">
    <attainGoal name="default"/>
  </goal>

  <goal name="rebuild">
    <attainGoal name="clean"/>
    <attainGoal name="build"/>
  </goal>

  <goal name="xbean:generate" description="Generates the XBean XSD, documentation and META-INF/services files." prereqs="setclasspath">
    <taskdef name="xsdGenerate" classname="org.xbean.spring.task.SchemaGenerateTask">
      <classpath refid="xbean.generate.classpath"/>
    </taskdef>
    <xsdGenerate destFile="target/server.xsd" namespace="http://xbean.org/schemas/server"
      classpathref="xbean.generate.classpath" srcdir="src/java" metaInfDir="${basedir}/target/generated/"/>

    <copy todir="${basedir}/target/classes">
      <fileset dir="${basedir}/target/generated"/>
    </copy>
  </goal>

  <goal name="setclasspath">
    <path id="xbean.generate.classpath">
      <pathelement path="${maven.build.dest}"/>
      <!--      <pathelement path="${maven.test.dest}"/>-->
      <path refid="maven.dependency.classpath"/>
    </path>
  </goal>

</project>
